
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Users</h1>


<div class="col-12 container">
    <div class="row justify-content-between">
        <div class="col col-md-7">
        <div class=" card card-body p-0">
            <table id="userTable" class="col-12 table table-hover table-bordered m-0">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>UserName</td>
                        <td>Email</td>
                        <td>Status</td>
                        <td>Created</td>
                        <td>Updated</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>

        </div>
        <div class="col col-md-5">

        <div class=" card card-body">
            <input type="text"
				   class="form-control mb-3"
				   placeholder="UserName"
				   id="userNameInput" />
            <input 
                type="text"
                class="form-control mb-3"
				placeholder="Email"
                id="emailInput" />
			<input 
                type="password"
                class="form-control mb-3"
                placeholder="Password" 
                id="passwordInput" />
            <input type="password"
                class="form-control mb-3"
                placeholder="Password Confirm"
                id="passwordConfirmInput" />
            <div class="row mt-1">
                <button class="btn btn-success mx-2" id="addUserBtn">Create</button>
            </div>
            <div id="divResult" style="display: none;"></div>
        </div>
        </div>
    </div>
</div>


@section Scripts{
<script>
$(document).ready(function(){
    var apiBaseUrl="@ViewBag.ApiBaseURL";
    GetUserList();

    function GetUserList(){
        $.ajax({
         url: apiBaseUrl + "/User",
         type: "GET",
         headers: {
           "Authorization": "Bearer " + token
         },
         success: function (d) {
                UserToTable(d)
         },
         error:  function (d) {
            $("#userTable tbody").empty();
         },
        });
    }

    function UserToTable(data){
        $("#userTable tbody").empty();
        var row="";
        $.each(data,function(i,item){
            row+= "<tr>";
            row+= "<td>" + item.id + "</td>";
			row+= "<td>" + item.userName + "</td>";
			row+= "<td>" + item.email + "</td>";
            if (item.is_Active){
                row+= "<td><span class='badge badge-success p-2'>Active</span></td>";
            }
            else {
                row+= "<td><span class='badge badge-warning p-2'>DeActive</span></td>";
            }
            
			row+= "<td>" + FormatDate(item.created) + "</td>";
            row+= "<td>" + FormatDate(item.updated) + "</td>";
			row+= "</tr>";
        });
        $("#userTable tbody").append(row);

    }

    $("#addUserBtn").click(function(){
        var userName = $("#userNameInput").val();
        var email = $("#emailInput").val();
        var password = $("#passwordInput").val();
	    var passwordConfirm = $("#passwordConfirmInput").val();
        var newUser = new Object();
        newUser.userName = userName;
        newUser.email = email;
        newUser.password = password;
		newUser.passwordConfirm = passwordConfirm;

        $.ajax({
           url: apiBaseUrl + "/User",
           type: "POST",
           headers: {
           "Authorization": "Bearer " + token
            },
           data: JSON.stringify(newUser),
           contentType: "application/json",
           success: function (d) {
                GetUserList();
                $("#userNameInput").val('');
                $("#emailInput").val('');
                $("#passwordInput").val('');
           },
           error:  function (d) {

           var errors = d.responseJSON.errors;
           $("#divResult").fadeIn(1000);
           $("#divResult").addClass("alert alert-danger m-3 ");
           $("#divResult").html(Object.values(errors)[0][0]);
           },

        });
    });
        
    
});


</script>
}